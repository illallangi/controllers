#!/usr/local/bin/hook
---
component: tailscale
kinds:
- apiVersion: illallangi.enterprises/v1alpha1
  kind: Data
---
apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata: {{ _component.metadata }}
rules:
- apiGroups:
  - ""
  resourceNames:
  - {{ _component.metadata.name }}
  resources:
  - secrets
  verbs:
  - get
  - update
  - patch
- apiGroups:
  - ""
  resources:
  - secrets
  verbs:
  - create