#!/usr/local/bin/hook
---
component: tailscale
kinds:
- apiVersion: illallangi.enterprises/v1alpha1
  kind: Rsync
---
apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  labels: {{ _component.metadata.labels }}
  name: {{ _component.metadata.name }}
  namespace: {{ _component.metadata.namespace }}
rules:
- apiGroups:
  - ""
  resourceNames:
  - {{ _component.metadata.name }}
  resources:
  - secrets
  verbs:
  - get
  - update
  - patch
- apiGroups:
  - ""
  resources:
  - secrets
  verbs:
  - create
